<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_project.controllers.MenuController"
      alignment="CENTER" spacing="16" styleClass="card"
      prefWidth="520" prefHeight="360">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Quiz Game â€” Menu" styleClass="title" />
    <Label fx:id="welcomeLabel" text="Not signed in" styleClass="subtitle" />

    <!-- Actions -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="_Login" mnemonicParsing="true"
                onAction="#onLoginClick" styleClass="btn-primary btn-wide"/>
        <Button text="Load _Quiz (JSON)" mnemonicParsing="true"
                onAction="#onLoadQuizClick" styleClass="btn-wide"/>
        <Button fx:id="startBtn" text="_Start Quiz" mnemonicParsing="true"
                disable="true" onAction="#onStartQuizClick"
                styleClass="btn-wide" defaultButton="true"/>
        <Button text="_View Results" mnemonicParsing="true"
                onAction="#onViewResultsClick" styleClass="btn-ghost btn-wide"/>
    </HBox>

    <!-- Theme Switcher -->
    <HBox alignment="CENTER" spacing="12" styleClass="mt-16">
        <Label text="Theme:" styleClass="subtitle"/>
        <Button text="_Cyan" mnemonicParsing="true"
                onAction="#onThemeCyan" styleClass="btn-ghost btn-wide"/>
        <Button text="_Pink" mnemonicParsing="true"
                onAction="#onThemePink" styleClass="btn-ghost btn-wide"/>
    </HBox>

    <Region VBox.vgrow="ALWAYS" /> <!-- keeps content centered when window grows -->
</VBox>
