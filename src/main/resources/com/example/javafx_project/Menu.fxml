<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_project.controllers.MenuController"
      spacing="12" alignment="CENTER">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Quiz Game â€” Menu" styleClass="title"/>

    <!-- This shows who is logged in -->
    <Label fx:id="welcomeLabel" text="Not signed in"/>

    <Button text="Login"              onAction="#onLoginClick"/>
    <Button text="Load Quiz (JSON)"   onAction="#onLoadQuizClick"/>
    <!-- We will enable this only when (logged in && quiz loaded) -->
    <Button fx:id="startBtn" text="Start Quiz" onAction="#onStartQuizClick" disable="true"/>
    <Button text="View Results" onAction="#onViewResultsClick" disable="true"/>
</VBox>
