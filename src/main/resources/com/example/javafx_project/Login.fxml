<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_project.controllers.LoginController"
      spacing="14" alignment="CENTER" styleClass="card"
      prefWidth="420" prefHeight="260">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sign in" styleClass="title"/>

    <GridPane hgap="10" vgap="10" maxWidth="Infinity">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="_Username:" mnemonicParsing="true"
               GridPane.rowIndex="0" GridPane.columnIndex="0" labelFor="$usernameField"/>
        <TextField fx:id="usernameField" promptText="alice"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="_Password:" mnemonicParsing="true"
               GridPane.rowIndex="1" GridPane.columnIndex="0" labelFor="$passwordField"/>
        <PasswordField fx:id="passwordField" promptText="•••••"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="messageLabel" textFill="red"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="_Back to Menu" mnemonicParsing="true"
                onAction="#onBack" cancelButton="true"/>
        <Button text="_Login" mnemonicParsing="true"
                onAction="#onLogin" defaultButton="true"/>
    </HBox>
</VBox>
