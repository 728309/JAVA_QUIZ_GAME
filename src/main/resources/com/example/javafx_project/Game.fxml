<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_project.controllers.GameController"
      spacing="16" alignment="TOP_LEFT" styleClass="card"
      prefWidth="640" prefHeight="420">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <!-- Header -->
    <GridPane hgap="12" vgap="8">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints halignment="RIGHT" />
        </columnConstraints>

        <Label fx:id="titleLabel" GridPane.columnIndex="0"
               wrapText="true" maxWidth="Infinity" styleClass="title"/>

        <HBox spacing="12" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Label fx:id="progressLabel" styleClass="subtitle"/>
            <Label fx:id="scoreLabel"   styleClass="subtitle"/>
        </HBox>
    </GridPane>

    <!-- Timer -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="row">
        <Label text="Time:" styleClass="subtitle"/>
        <Label fx:id="timerLabel" styleClass="pill"/>
        <HBox fx:id="timerBlocks" spacing="4"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Question area (radio for both radio/boolean) -->
    <VBox fx:id="radioBox" spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Choose one:" styleClass="subtitle"/>
        <!-- choices inserted here by controller BEFORE this submit button -->
        <Region VBox.vgrow="ALWAYS"/> <!-- pushes Submit to the bottom on tall windows -->
        <Button fx:id="submitBtn" text="_Submit" mnemonicParsing="true"
                onAction="#onSubmitRadio" styleClass="btn-primary btn-wide"/>
    </VBox>

    <!-- Navigation -->
    <HBox spacing="12" styleClass="row" alignment="CENTER_RIGHT">
        <Button text="_Back to Menu" mnemonicParsing="true"
                onAction="#onBack" styleClass="btn-ghost btn-wide" cancelButton="true"/>
        <Button fx:id="nextBtn" text="_Next Question" mnemonicParsing="true"
                onAction="#onNext" disable="true" styleClass="btn-wide"/>
    </HBox>
</VBox>
